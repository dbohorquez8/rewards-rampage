<h1>new reward</h1>

<% if @reward.errors.any? %>
  <%= @reward.errors.full_messages %>
<% end %>

<%= form_for [current_reward_page, @reward] do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.file_field :photo %>
  <%= f.hidden_field :photo_cache %>
  <%= f.text_field :points, value: 100 %>

  <%= hidden_field_tag :id, current_reward_page.identifier %>
  <%= f.submit %>
<% end -%>
